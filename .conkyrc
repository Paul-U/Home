alignment top_right
background yes
border_width 0
cpu_avg_samples 2
default_color lightgreen
default_outline_color white
default_shade_color white
draw_borders yes
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Ricty:size=10
gap_x 10
gap_y 25
maximum_width 280
minimum_size 280 5
net_avg_samples 2
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
own_window_hints undecorated,sticky,skip_taskbar,skip_pager
own_window_colour 000000
own_window_argb_visual yes
own_window_argb_value 180
stippled_borders 0
update_interval 3.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
double_buffer yes

lua_load ~/.config/conky/scripts/conky_lua_scripts.lua

TEXT
${scroll 90 $nodename - $sysname $kernel on $machine}
${time %Y/%m/%d(%a) %H:%M}
$hr
${color green}Uptime :$color $uptime
${color green}CPU    :$color ${lua_parse format %2.0f $cpu}% ${cpubar 4}
${color green}RAM    :$color ${lua_parse format %2.0f $memperc}% ${membar 4}
${color green}Swap   :$color ${lua_parse format %2.0f $swapperc}% ${swapbar 4}
${color green}Temp CPU/HDD: $color${hwmon 0 temp 1}℃ ${execi 10 sudo hddtemp /dev/sda -n --unit=c}℃
${color green}File systems:
 / $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
$hr
${color green}Battery: $color${battery}(${battery_time})
$hr
${color green}Networking:
Up:$color ${upspeed enp0s3} ${color green} - Down:$color ${downspeed enp0s3}
${color green}Wifi: $color${wireless_essid enp0s3} ${wireless_mode enp0s3}
${color green}IP  : $color${addr enp0s3}
${color green}Quality:$color ${wireless_link_qual_perc enp0s3} ${wireless_link_bar 4 enp0s3}
$hr
${color green}Volume:
$color${execi 3 amixer sget Master | egrep \[[0-9]+%\]}
$hr
${color green}Name              PID   CPU%   MEM%
${color green}--Sort by CPU--
${color lightgreen} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgreen} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgreen} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgreen} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${color lightgreen} ${top name 5} ${top pid 5} ${top cpu 5} ${top mem 5}
${color green}--Sort by Memory--
${color lightgreen} ${top_mem name 1} ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}
${color lightgreen} ${top_mem name 2} ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
${color lightgreen} ${top_mem name 3} ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}
${color lightgreen} ${top_mem name 4} ${top_mem pid 4} ${top_mem cpu 4} ${top_mem mem 4}
${color lightgreen} ${top_mem name 5} ${top_mem pid 5} ${top_mem cpu 5} ${top_mem mem 5}

