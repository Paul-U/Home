
Config { font = "xft:Ricty:pixelsize=12:bold"
       , bgColor = "#333333"
       , fgColor = "#888888"
       , position = TopP 0 128
       , commands = [ Run Cpu ["-L","20","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%Y/%m/%d %a %k:%M" "date" 10
                    , Run Battery 
                      [ "-t", "Bat: <left>%/<timeleft>"]
                      10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% * %swap% | %battery% <fc=#ee9a00>%date%</fc>"
}


